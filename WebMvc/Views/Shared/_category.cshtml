@model WebMvc.Models.CatalogCategory



<form asp-controller="Catalog" asp-action="EventSearchByCategory" method="post">

    <a href="@Url.Action("EventSearchByCategory","Catalog",
            new { CategoryFilterApplied = @Model.ID })">
        <img class="class="img-fluid img-thumbnail"" src="@Model.PictureUrl" style="width:320px;height:150px"/>
    </a>


    <p>
        <a>@Model.Category</a>
    </p>



    <input type="hidden" asp-for="@Model.ID" value="@Model.ID" name="id" />

    <input type="hidden" asp-for="@Model.Category" name="name" />

    <input type="hidden" asp-for="@Model.PictureUrl" name="imageUri" />



</form>