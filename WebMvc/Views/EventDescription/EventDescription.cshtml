
@{
    ViewData["Title"] = "EventDescription";
}
@model WebMvc.ViewModels.EventDescriptionViewModel

<body>
    <div class="container">
        <div class="row equal">
            <div class="col-sm-7 ">

                <img src="@Model.PictureUrl" alt="Event Picture" class="eventImg img-fluid">
            </div>
            <div class="col-sm-4 bg-light">
                <div class="padding fancydate">
                    <span> @Model.Month</span>
                    <span>@Model.Date</span>
                </div>
                <div class="padding">
                    <H2>@Model.Name</H2>
                </div>               
                <div class="padding grayText">
                    <br />
                    <span>$@Model.Price.ToString("N2")</span>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="row top-buffer">
            <div class="col-sm-7 padding">
                <!--Share and save options-->

            </div>
            <div class="col-sm-4">
                <form asp-controller="Cart" asp-action="AddToCart">
                    <input class="ticket-button" type="submit" value="Buy Ticket" />

                    <input type="hidden" asp-for="@Model.ID" name="id" />
                    <input type="hidden" asp-for="@Model.Name" name="name" />
                    <input type="hidden" asp-for="@Model.Month" name="month" />
                    <input type="hidden" asp-for="@Model.Date" name="date" />
                    <input type="hidden" asp-for="@Model.Day" name="day" />
                    <input type="hidden" asp-for="@Model.Time" name="time" />
                    <input type="hidden" asp-for="@Model.Address" name="address" />
                    <input type="hidden" asp-for="@Model.City" name="city" />
                    <input type="hidden" asp-for="@Model.State" name="state" />

                    <input type="hidden" asp-for="@Model.CatalogCategory" name="category" />
                    <input type="hidden" asp-for="@Model.CatalogCategoryID" name="categoryId" />
                    <input type="hidden" asp-for="@Model.CatalogType" name="type" />
                    <input type="hidden" asp-for="@Model.CatalogTypeID" name="typeId" />
                    <input type="hidden" asp-for="@Model.CatalogCity" name="catalogcity" />
                    <input type="hidden" asp-for="@Model.CatalogCityID" name="typeId" />
                    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
                    <input type="hidden" asp-for="@Model.Price" name="price" />
                </form>

            </div>
        </div>
    </div>
    <hr>
    <div>
        <div class="row top-buffer">
         
            <div class="col-sm-4">
                <h3>Date and Time</h3>
                <p>@Model.Month  @Model.Date<br /> @Model.Day  <br/>@Model.Time</p>
                <h3>Location</h3>
                <p>@Model.Address<br />@Model.City, @Model.State </p>
               
            </div>
        </div>
    </div>
    <hr>
 
</body>



